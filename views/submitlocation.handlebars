<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
        <h2>Submit a New Location</h2>
            <form method="post" action="/submitlocation" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="locationName">Location Name</label>
                    <input type="text" class="form-control" id="locationName" placeholder="Location Name" name="name">
                </div>
                <div class="form-group">
                    <label for="locationAddress">Address</label>
                    <input type="text" class="form-control" id="locationAddress" placeholder="Address" name="address">
                </div>
                <div class="form-group">
                    <label for="locationPhoneNumber">Phone Number</label>
                    <input type="text" class="form-control" id="locationPhoneNumber" placeholder="Phone Number" name="phone">
                </div>
                <div class="form-group">
                    <label for="locationDescription">Enter a Description</label>
                    <textarea maxlength="200" class="form-control" rows="5" id="locationDescription" name="description"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Upload an Image</label>
                    <input type="file" id="exampleInputFile" name="image">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
    <hr>
</div>
